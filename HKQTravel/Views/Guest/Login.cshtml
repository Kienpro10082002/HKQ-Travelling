
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Guest"))
{
    @Html.ValidationSummary(true)

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">

                                        <h2>Xin chào bạn!</h2>
                                        <p>Chúng tôi rất vui vì bạn đã quay trở lại.</p>
                                        <h4 style="color : red;text-align:center"> @ViewBag.thongbao </h4>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                   id="user" name="user"
                                                   placeholder="Tài khoản">
                                            @ViewData["erro_user"]
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="pass" name="pass" placeholder="Mật khẩu">
                                            @ViewData["erro_pass"]
                                        </div>
                                        <div class="input-group mb-5 d-flex justify-content-between">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="formCheck">
                                                <label for="formCheck" class="form-check-label text-secondary">
                                                    <small>
                                                        Nhớ Mật
                                                        Khẩu
                                                    </small>
                                                </label>
                                            </div>
                                            <div class="forgot">
                                                <small><a href="@Url.Action("findAccountToSendPassword", "Guest")">Quên mật khẩu?</a></small>
                                            </div>
                                        </div>
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Đăng nhập">


                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Đăng nhập với Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Đăng nhập với Facebook
                                        </a>
                                    </form>
                                    <div class="row">
                                        <small>Bạn chưa có tài khoản? <a href="@Url.Action("Register")">Đăng ký</a></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
}

