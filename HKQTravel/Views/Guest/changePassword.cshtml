@using HKQTravel.Models
@model HKQTravel.Models.user_account

@{
    ViewBag.Title = "changePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    user_account user = (user_account)Session["user_account"];
}

<div class="container">
    @using (Html.BeginForm("changePassword", "Guest", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
    {
        @Html.ValidationSummary(true)

        <h2 class="text-center">Đổi mật khẩu</h2>

        <div class="form-group">
            <label for="userName">Tên tài khoản:</label>
            <input class="form-control" type="text" id="userName" name="userName" value="@user.user_name" readonly />
            @ViewData["WrongUser"]
        </div>

        <div class="form-group">
            <label for="current_password">Mật khẩu hiện tại:</label>
            <input class="form-control" type="password" id="current_password" name="current_password" required>
            @ViewData["WrongPassword"]
        </div>

        <div class="form-group">
            <label for="new_password">Mật khẩu mới:</label>
            <input class="form-control" type="password" id="new_password" name="new_password" required>
        </div>

        <div class="form-group">
            <label for="confirm_password">Xác nhận mật khẩu mới:</label>
            <input class="form-control" type="password" id="confirm_password" name="confirm_password" required>
            @ViewData["WrongNewPassword"]
        </div>

        <div class="text-center">
            <button class="btn btn-outline-primary" type="submit">Đổi mật khẩu</button>
        </div>
    }
</div>

<script>
    function successFunction() {
        alert("Đổi mật khẩu thành công!");
    }
</script>
