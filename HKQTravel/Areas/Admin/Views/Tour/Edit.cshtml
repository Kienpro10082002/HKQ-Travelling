@model HKQTravel.Models.tour

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Tour", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">
                            CẬP NHẬT TOUR
                        </strong>
                    </div>

                    <div class="col-md-6 text-right">
                        <button class="btn btn-success btn-sm" type="submit">Cập nhật</button>
                        <a href="@Url.Action("", "Tour")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9 ">
                        <div class="mb-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.tour_id)

                            <div class="form-group">
                                <label for="name">Tên tour:</label>
                                @Html.EditorFor(model => model.tour_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.tour_name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="name">Giá:</label>
                                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="name">Thời gian khởi hành:</label>
                                <input type="datetime-local" class="form-control" id="timego" name="timego">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="name">Thời gian về:</label>
                            <input type="datetime-local" class="form-control" id="timego" name="timereturn">
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.destination_id, "Điểm đến", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.destination_id, ViewBag.destination_id as IEnumerable<SelectListItem>, "Chọn Điểm đến", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.destination_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.departure_id, "Điểm khởi hành", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.departure_id, (SelectList)ViewBag.departure_id, "Chọn Điểm khởi hành", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.departure_id, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.discount_id, "Mã giảm giá", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.discount_id, (SelectList)ViewBag.discount_id, "Chọn mã giảm giá", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.discount_id, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.tour_type_id, "Loại tour", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.tour_type_id, (SelectList)ViewBag.tour_type_id, "Chọn Loại tour", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.tour_type_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button class="btn btn-success btn-sm" type="submit">Cập nhật</button>
            <a href="@Url.Action("", "Tour")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
        </div>
    </section>
}