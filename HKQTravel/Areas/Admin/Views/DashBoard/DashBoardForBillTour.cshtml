@model List<HKQTravel.Areas.Admin.Data.BillTourByMonth>

<div class="container text-center">
    <h2>Tổng doanh thu Tour</h2>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="row">Tháng</th>
                <th scope="row">Năm</th>
                <th scope="row">Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Month</td>
                    <td scope="row">@item.Year</td>
                    <td scope="row">@String.Format("{0:0,0}", item.TotalRevenue) VND</td>
                </tr>
            }
        </tbody>
    </table>
</div>
