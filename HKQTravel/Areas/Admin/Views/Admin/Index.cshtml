@using PagedList.Mvc;
@using HKQTravel.Models;
@model PagedList.PagedList<HKQTravel.Models.admin_account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        DANH SÁCH QUẢN TRỊ VIÊN
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create","Admin")" class="btn btn-sm btn-success">Thêm</a>
                    <a href="@Url.Action("Trashlist","Admin")" class="btn btn-sm btn-danger">Thùng rác</a>
                </div>
            </div>
        </div>
        
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Tài khoản</th>
                    <th>Mật khẩu</th>
                    <th>Họ và tên</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr >
                        <td class="text-center"><input type="checkbox" /></td>
                        <td class="text-center">@item.admin_id</td>
                        <td>@item.admin_user</td>
                        <td>@item.admin_password</td>
                        <td>@item.admin_fulllname</td>
                        <td>@item.email</td>
                        <td>@item.status</td>
                        <td class="text-center">
                            @if (item.status == 1)
                            {
                                <a href="@Url.Action("Status","Admin",new { id = item.admin_id })" class="btn btn-sm btn-success"><i class="fas fa-toggle-on"></i></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status","Admin",new { id = item.admin_id })" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i></a>
                            }
                            <a href="@Url.Action("Edit","Admin",new { id = item.admin_id })" class="btn btn-sm btn-success">Sửa</a>
                            <a href="@Url.Action("Details","Admin",new { id = item.admin_id })" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="@Url.Action("DeleteTemporary","Admin",new { id = item.admin_id })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </table>

        </div>
        <div class="card-footer">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                }

                    .MenuTrang li a {
                        color: black;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                    }
            </style>
        </div>
    </div>
</section>
