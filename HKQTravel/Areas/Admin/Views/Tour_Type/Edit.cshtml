@model HKQTravel.Models.tour_type

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




@using (Html.BeginForm("Edit", "Tour_Type", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">
                            CẬP NHẬT LOẠI TOUR
                        </strong>
                    </div>

                    <div class="col-md-6 text-right">
                        <button class="btn btn-success btn-sm" type="submit">Cập nhật</button>
                        <a href="@Url.Action("", "Tour_Type")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9 ">
                        <div class="mb-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.tour_type_id)

                            <div class="form-group">
                                <label for="name">Tên loại tour:</label>
                                @Html.EditorFor(model => model.tour_type_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.tour_type_name, "", new { @class = "text-danger" })
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button class="btn btn-success btn-sm" type="submit">Cập nhật</button>
            <a href="@Url.Action("", "Tour_Type")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
        </div>
    </section>
}
