@model HKQTravel.Models.destination_point

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Destination_Point", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <script>"~/Areas/Admin/Assets/dist/js/Image.js"</script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">
                            CẬP NHẬT ĐIỂM ĐẾN
                        </strong>
                    </div>

                    <div class="col-md-6 text-right">
                        <button class="btn btn-success btn-sm" type="submit">Cập nhật</button>
                        <a href="@Url.Action("","Destination_Point")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9 ">
                        <div class="mb-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.destination_id)

                            <div class="form-group">
                                <label for="name">Tên điểm đến:</label>
                                @Html.EditorFor(model => model.destination_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.destination_name, "", new { @class = "text-danger" })
                            </div>


                        <div class="form-group">
                            @Html.TextBox("fileImage", "", new { type = "file", accept = "image/*" })
                            <br />
                            <img id="preview" width="150" height="100" class="hidden" />
                            <br />
                            @Html.ValidationMessageFor(model => model.destination_image, "", new { @class = "text-danger" })
                        </div>
                    </div>



                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button class="btn btn-success btn-sm" type="submit">Cập nhật</button>
            <a href="@Url.Action("","Destination_Point")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
        </div>
    </section>

}