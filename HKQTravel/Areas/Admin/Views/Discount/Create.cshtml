@model HKQTravel.Models.discount

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create","Discount", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">
                            THÊM MÃ KHUYẾN MÃI @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-success btn-sm" type="submit">Lưu</button>
                        <a href="@Url.Action("","Discount")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9 ">
                        <div class="mb-3">
                            <label for="name">Tên mã giảm:</label>
                            @Html.EditorFor(model => model.discount_name, new { htmlAttributes = new { @class = "form-control", id = "hoten" } })


                        </div>
                        <div class="form-group">
                            <label for="name">Giá trị:</label>
                            <input type="number" name="value" min="0" max="100" step="0.01" required>
                            <small>Nhập giá trị phần trăm từ 0 đến 100</small>

                        </div>
                        <div class="form-group">
                            <label for="name">Ngày khả dụng:</label>
                            <input type="datetime-local" class="form-control" id="timeactive" name="timeactive">
                        </div>
                    </div>
                        </div>

                    </div>
                </div>
            
            <div class="card-footer text-right">
                <button class="btn btn-success btn-sm" type="submit">Lưu</button>
                <a href="@Url.Action("Index","User")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
            </div>

      

    </section>
}

}